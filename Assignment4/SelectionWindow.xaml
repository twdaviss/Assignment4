<Window x:Class="Assignment4.SelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Assignment4"
        mc:Ignorable="d"
        Title="Selection" Height="145" Width="294">
    <Grid Margin="0,0,0,-6">
        <StackPanel Margin="10,10,10,21">
            <TextBlock>Select Encryption Algorithm</TextBlock>
            <StackPanel Margin="30,10,0,0" Orientation="Horizontal">
                <RadioButton Name="Aes_Button" Margin="0,0,10,0" Checked="Radio_Button_Changed">Aes</RadioButton>
                <RadioButton Name="RSA_Button" Checked="Radio_Button_Changed">RSA</RadioButton>
            </StackPanel>
            <Button Name="Next_Button" Margin="0,20,20,10" IsEnabled="False" HorizontalAlignment="Right" Click="Next_Button_Click">Next</Button>
        </StackPanel>

    </Grid>
</Window>
